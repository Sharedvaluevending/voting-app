<%- include('partials/header') %>
<%
  var displayCounts = { STRONG_BUY: 0, BUY: 0, SELL: 0, STRONG_SELL: 0, HOLD: 0 };
  (signals || []).forEach(function(sig) {
    var s = sig.signal;
    if (s === 'HOLD' && sig.topStrategies && sig.topStrategies.length > 0) {
      var fallback = sig.topStrategies.find(function(ts) {
        return (ts.signal === 'BUY' || ts.signal === 'STRONG_BUY' || ts.signal === 'SELL' || ts.signal === 'STRONG_SELL') && (ts.score || 0) >= 55;
      });
      if (fallback) s = fallback.signal;
    }
    if (!displayCounts[s]) displayCounts[s] = 0;
    displayCounts[s] += 1;
  });
%>

<% if (typeof deleted !== 'undefined' && deleted) { %>
<div class="alert alert-success" style="margin-bottom:16px;">Your account has been deleted.</div>
<% } %>

<!-- PRICE TICKER (WebSocket real-time + fallback poll) -->
<div class="ticker-strip" id="ticker-strip">
  <% prices.forEach(function(coin) { %>
    <div class="ticker" data-coin-id="<%= coin.id %>" onclick="location.href='/coin/<%= coin.id %>'">
      <div class="ticker-sym"><%= coin.symbol %></div>
      <div class="ticker-price" data-price><%= typeof formatPrice !== 'undefined' ? '$' + formatPrice(coin.price) : '$' + Number(coin.price).toFixed(2) %></div>
      <div class="ticker-change <%= coin.change24h >= 0 ? 'up' : 'down' %>" data-change>
        <%= coin.change24h >= 0 ? '+' : '' %><%= Number(coin.change24h).toFixed(2) %>%
      </div>
    </div>
  <% }); %>
</div>

<!-- SUMMARY -->
<div class="summary-bar">
  <div class="summary-stat">
    <div class="label">Strong Buys</div>
    <div class="value up"><%= displayCounts.STRONG_BUY || 0 %></div>
  </div>
  <div class="summary-stat">
    <div class="label">Buys</div>
    <div class="value" style="color:#3b82f6;"><%= displayCounts.BUY || 0 %></div>
  </div>
  <div class="summary-stat">
    <div class="label">Sells</div>
    <div class="value down"><%= (displayCounts.SELL || 0) + (displayCounts.STRONG_SELL || 0) %></div>
  </div>
  <div class="summary-stat">
    <div class="label">Hold</div>
    <div class="value" style="color:#eab308;"><%= displayCounts.HOLD || 0 %></div>
  </div>
  <div class="summary-stat">
    <div class="label">Coins</div>
    <div class="value"><%= signals.length %></div>
  </div>
</div>

<!-- MANAGE COINS (logged-in users only) -->
<% if (typeof user !== 'undefined' && user && typeof COIN_META !== 'undefined' && COIN_META) { %>
<div class="manage-coins-section" style="margin-bottom:20px;">
  <div class="manage-coins-header" style="display:flex;align-items:center;justify-content:space-between;cursor:pointer;padding:10px 14px;background:rgba(15,23,42,0.6);border:1px solid #1e2a3a;border-radius:8px;" onclick="var el=document.getElementById('manage-coins-panel');el.style.display=el.style.display==='none'?'block':'none';this.querySelector('.manage-arrow').textContent=el.style.display==='none'?'\u25B6':'\u25BC';">
    <h4 style="color:#9ca3af;font-size:12px;text-transform:uppercase;letter-spacing:1px;margin:0;">Manage coins</h4>
    <span class="manage-arrow" style="color:#6b7280;font-size:12px;">&#x25BC;</span>
  </div>
  <div id="manage-coins-panel" style="display:block;padding:14px;background:rgba(15,23,42,0.4);border:1px solid #1e2a3a;border-top:none;border-radius:0 0 8px 8px;">
    <p style="font-size:12px;color:#6b7280;margin:0 0 12px 0;">Add or remove coins from your dashboard. Excluded coins are hidden from the grid above.</p>
    <div style="margin-bottom:12px;">
      <div style="font-size:11px;color:#6b7280;margin-bottom:6px;text-transform:uppercase;">On dashboard (<%= signals.length %>)</div>
      <div id="monitored-coins" style="display:flex;flex-wrap:wrap;gap:6px;">
        <% signals.forEach(function(sig) { %>
        <span class="coin-chip monitored" data-coin-id="<%= sig.coin.id %>">
          <a href="/coin/<%= sig.coin.id %>" style="color:inherit;text-decoration:none;"><%= sig.coin.symbol %></a>
          <button type="button" class="coin-chip-remove" onclick="toggleCoinFromPanel('<%= sig.coin.id %>', true)" title="Remove from dashboard">−</button>
        </span>
        <% }); %>
      </div>
    </div>
    <div>
      <div style="font-size:11px;color:#6b7280;margin-bottom:6px;text-transform:uppercase;">Add to dashboard</div>
      <div id="excluded-coins" style="display:flex;flex-wrap:wrap;gap:6px;">
        <% if (typeof excludedCoinsFull !== 'undefined' && excludedCoinsFull.length > 0) { %>
          <% excludedCoinsFull.forEach(function(c) { %>
          <span class="coin-chip excluded" data-coin-id="<%= c.id %>">
            <a href="/coin/<%= c.id %>" style="color:inherit;text-decoration:none;"><%= c.symbol %></a>
            <button type="button" class="coin-chip-add" onclick="toggleCoinFromPanel('<%= c.id %>', false)" title="Add to dashboard">+</button>
          </span>
          <% }); %>
        <% } else { %>
          <span class="all-coins-hint" style="font-size:12px;color:#6b7280;">All coins are on your dashboard.</span>
        <% } %>
