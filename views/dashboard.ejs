<!-- Coin toggle script -->
<script>
function doToggleCoin(coinId, excluded) {
  return fetch('/api/toggle-coin', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    credentials: 'same-origin',
    body: JSON.stringify({ coinId: coinId, excluded: excluded })
  }).then(function(r) { return r.json(); });
}

function toggleCoin(btn, coinId) {
  btn.disabled = true;
  btn.textContent = '...';
  var card = btn.closest('.signal-card');
  var symEl = card && card.querySelector('.symbol');
  var symbol = symEl ? symEl.textContent.trim() : coinId.toUpperCase();
  doToggleCoin(coinId, true).then(function(data) {
    if (data.success) {
      if (card) card.remove();
      var excludedEl = document.getElementById('excluded-coins');
      if (excludedEl) {
        var hint = excludedEl.querySelector('.all-coins-hint');
        if (hint) hint.remove();
        var chip = document.createElement('span');
        chip.className = 'coin-chip excluded';
        chip.setAttribute('data-coin-id', coinId);
        chip.innerHTML = '<a href="/coin/' + coinId + '" style="color:inherit;text-decoration:none;">' + symbol + '</a><button type="button" class="coin-chip-add" onclick="toggleCoinFromPanel(\'' + coinId + '\', false)" title="Add to dashboard">+</button>';
        excludedEl.appendChild(chip);
      }
    } else {
      alert('Failed: ' + (data.error || 'Unknown error'));
